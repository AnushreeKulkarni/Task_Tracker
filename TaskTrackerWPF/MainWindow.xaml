<Window x:Class="TaskTrackerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackerWPF"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <TabControl >
            <TabItem x:Name="tabDailyTask" Header="Task Tracker" Visibility="Visible">
                <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,0,0,-0.4">
                    <StackPanel  Visibility="{Binding Path=Visibility,ElementName=tabDailyTask}">
                    <DataGrid x:Name="dailytrackGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="0,0,351.4,0" Height="149" LoadingRow="dailyTrackGrid_OnLoadingRow" Width="850" HorizontalAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding EmpName}" Width="200"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="200"></DataGridTextColumn>
                            <DataGridTextColumn Header="Task Title" Binding="{Binding TaskTitle}" Width="200" ></DataGridTextColumn>
                            <DataGridTextColumn Header="Hours Spent" Binding="{Binding HoursSpent}" Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="150"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                        <Label x:Name="lblemp" Visibility="Hidden">Select Employee</Label>
                    <ComboBox x:Name="dropdownEmp" Height="34" Margin="36,10,578,0" DisplayMemberPath="EmpName" SelectedValuePath="EmpId" Visibility="Hidden"></ComboBox>
                        <Label>Date</Label>  <Calendar x:Name="Calender1" Margin="36,10,578,0"></Calendar>
                        <Label>TaskList</Label> <ComboBox x:Name="dropdownTask" Height="34" Margin="36,10,578,0" DisplayMemberPath="TaskTitle" SelectedValuePath="TaskId"></ComboBox>
                        <Label>Hours</Label><TextBox x:Name="txtHours" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Label>Remarks</Label><TextBox x:Name="txtRemarks" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                    <Button Click="AddDailyTask" Margin="36,10,578.4,0" Content="Add Daily Task" Height="39" />

                </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Task Data">
                <ScrollViewer VerticalScrollBarVisibility="Visible"  >
                    <StackPanel >
                        <DataGrid x:Name="taskGrid" ItemsSource="{Binding}"  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn  Header="Task ID" Binding="{Binding TaskId}" Width="100"></DataGridTextColumn>
                                <DataGridTextColumn Header="Ticket Number" Binding="{Binding TicketNumber}" Width="100"></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Title" Binding="{Binding TaskTitle}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Description" Binding="{Binding TaskDescription}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Type" Binding="{Binding TaskType}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Assigned To" Binding="{Binding AssignedTo}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Efforts" Binding="{Binding Efforts}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Planned Start Date" Binding="{Binding PlannedStartDate}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Planned End Date" Binding="{Binding PlannedEndDate}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Actual Start Date" Binding="{Binding ActualStartDate}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Actual End Date" Binding="{Binding ActualEndDate}" Width="200"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label>Ticket Number</Label>
                        <TextBox x:Name="txtTicket" Height="34" IsReadOnly="False"  Margin="36,10,578.4,0"></TextBox>
                        <Label>Task ID</Label>
                        <TextBox x:Name="txtTaskId" Height="34"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Label>Task Title</Label>
                        <TextBox x:Name="txtTaskTitle" Height="34" IsReadOnly="False" Margin="36,10,578,0" ></TextBox>
                        <Label>Task Description</Label>
                        <TextBox x:Name="txtTaskDesc" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Label>Task Type</Label>
                        <TextBox x:Name="txtTaskType" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Label>State</Label>
                        <ComboBox x:Name="dropdownState" Height="34" Margin="36,10,578,0" ></ComboBox>
                        <Label>Priority</Label>
                        <ComboBox x:Name="dropdownPriority" Height="34" Margin="36,10,578,0" ></ComboBox>
                        <Label>Efforts(in hours)</Label>
                        <TextBox x:Name="txtEfforts" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Label>Planned Start Date</Label>
                        <Calendar x:Name="CalenderPSD" Margin="36,10,578,0"></Calendar>
                        <Label>Planned End Date</Label>
                        <Calendar x:Name="CalenderPED" Margin="36,10,578,0"></Calendar>
                        <Label>Actual Start Date</Label>
                        <TextBox x:Name="txtASD" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Label>Actual End Date</Label>
                        <TextBox x:Name="txtAED" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                        <Button Click="AddTaskData" Margin="36,10,578.4,0" Content="Add Task" Height="39" />

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="reportTab" Header="Reports">
                <StackPanel >
                    <Label>Select:</Label>
                    <ComboBox x:Name="combo" Height="33" Margin="167,0,164,0" />
                    <Label>Select Start Date:</Label>
                    <Calendar x:Name="CalendarSD" ></Calendar>
                    <Label>Select End Date:</Label>
                    <Calendar x:Name="CalendarED"></Calendar>

                    <Button Content="Generate Report" Height="39" Margin="167,0,164,0" Click="Generate_Report"></Button>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="empTab" Header="Employee Data">
                <StackPanel >
                    <DataGrid x:Name="empGrid" ItemsSource="{Binding}"  AutoGenerateColumns="False" Height="139" Width="300" HorizontalAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="Employee ID" Binding="{Binding EmpId}" Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding EmpName}" Width="200"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label>Enter ID</Label>
                    <TextBox x:Name="txtId" Height="35"  IsReadOnly="False" Margin="36,10,578.4,0"/>
                    <Label>Enter Name</Label>
                    <TextBox x:Name="txtName" Height="34"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                    <Label>Enter UAID</Label>
                    <TextBox x:Name="txtUa" Height="34"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                    <Label>Enter Password</Label>
                    <TextBox x:Name="txtPwd" Height="32"  IsReadOnly="False" Margin="36,10,578.4,0" ></TextBox>
                    <Button Click="AddEmployee" Margin="36,10,578.4,0" Content="Add Details" Height="39" />

                </StackPanel>
            </TabItem>



        </TabControl>


    </Grid>

</Window>
