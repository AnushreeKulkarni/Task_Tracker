<Window x:Class="TaskTrackerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTrackerWPF"
        mc:Ignorable="d"
        Title="TaskTracker">
    <Grid>
        <TabControl >
            <TabItem x:Name="tabDailyTask" Header="Task Tracker" Visibility="Visible">
                <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,0,0,-0.4">
                    <StackPanel  Visibility="{Binding Path=Visibility,ElementName=tabDailyTask}">
                        <DataGrid x:Name="dailytrackGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="0,0,351.4,0" Height="149" LoadingRow="dailyTrackGrid_OnLoadingRow" HorizontalAlignment="Left">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee Name" Binding="{Binding EmpName}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Title" Binding="{Binding TaskTitle}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Hours Spent" Binding="{Binding HoursSpent}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="btnAdd" Click="AddDailyyTask" Margin="0,10,720,0" Content="Add Daily Task" Height="39" />
                        <StackPanel x:Name="daily" Visibility="Hidden">
                        <Label x:Name="lblemp" Visibility="Hidden">Select Employee</Label>
                            <ComboBox x:Name="dropdownEmp" Height="34" Margin="0,10,720,0" Visibility="Hidden" DisplayMemberPath="EmpName" SelectedValuePath="EmpId"></ComboBox>
                            <Label>Date</Label>
                            <TextBox x:Name="txtDate"  Height="32"  IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtDate_MouseEnter" MouseLeave="txtDate_MouseLeave" ></TextBox>
                            <Label>TaskList</Label>
                            <ComboBox x:Name="dropdownTask" Height="34" Margin="0,10,720,0" DisplayMemberPath="TaskTitle" SelectedValuePath="TaskId"></ComboBox>
                            <Label>Hours</Label>
                            <TextBox x:Name="txtHours" Height="32"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                            <Label>Remarks</Label>
                            <TextBox x:Name="txtRemarks" Height="32"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                            <Button Click="AddDailyTask" Margin="0,10,720,0" Content="Add Daily Task" Height="39" />
                            <Button x:Name="can" Click="CanAction" Margin="0,10,720,0" Content="Cancel" Height="39" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Task Data">
                <ScrollViewer VerticalScrollBarVisibility="Visible"  >
                    <StackPanel >
                        <DataGrid x:Name="taskGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectionUnit="FullRow" SelectionMode="Single" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Task ID" Binding="{Binding TaskId}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Ticket Number" Binding="{Binding TicketNumber}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Title" Binding="{Binding TaskTitle}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Description" Binding="{Binding TaskDescription}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Task Type" Binding="{Binding TaskType}"></DataGridTextColumn>
                                <DataGridTextColumn Header="State" Binding="{Binding State}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Assigned To" Binding="{Binding AssignedTo}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Efforts" Binding="{Binding Efforts}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Planned Start Date" Binding="{Binding PlannedStartDate}" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Planned End Date" Binding="{Binding PlannedEndDate}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Actual Start Date" Binding="{Binding ActualStartDate}"></DataGridTextColumn>
                                <DataGridTextColumn Header="Actual End Date" Binding="{Binding ActualEndDate}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="btnAddTask" Click="AddTask" Margin="0,10,720,0" Content="Add Task" Height="39" />
                        <Button x:Name="btnEditTask" Click="EdittTask" Margin="0,10,720,0" Content="Edit Task" Height="39" />
                        <StackPanel x:Name="editUpdate" Visibility="Hidden" >
                            <Label>Ticket Number</Label>
                            <TextBox x:Name="txtTicket" Height="34" IsReadOnly="False"  Margin="0,10,720,0"></TextBox>
                        <Label>Task ID</Label>
                            <TextBox x:Name="txtTaskId" Height="34"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                        <Label>Task Title</Label>
                            <TextBox x:Name="txtTaskTitle" Height="34" IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                        <Label>Task Description</Label>
                            <TextBox x:Name="txtTaskDesc" Height="32"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                        <Label>Task Type</Label>
                            <ComboBox x:Name="dropdownTaskType" Height="34" Margin="0,10,720,0" ></ComboBox>
                            <Label>State</Label>
                            <ComboBox x:Name="dropdownState" Height="34" Margin="0,10,720,0" SelectionChanged="dropdownState_SelectionChanged" ></ComboBox>
                        <Label>Priority</Label>
                            <ComboBox x:Name="dropdownPriority" Height="34" Margin="0,10,720,0" ></ComboBox>
                        <Label>Efforts(in hours)</Label>
                            <TextBox x:Name="txtEfforts" Height="32"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                        <Label>Planned Start Date</Label>
                            <TextBox x:Name="txtPSD"  Height="32"  IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtPSD_MouseEnter" MouseLeave="txtPSD_MouseLeave" ></TextBox>
                        <Label>Planned End Date</Label>
                            <TextBox x:Name="txtPED" Height="32"  IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtPED_MouseEnter" MouseLeave="txtPED_MouseLeave" ></TextBox>
                        <Label>Actual Start Date</Label>
                            <TextBox x:Name="txtASD"  Height="32"  IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtASD_MouseEnter" MouseLeave="txtASD_MouseLeave" ></TextBox>
                        <Label>Actual End Date</Label>
                            <TextBox x:Name="txtAED"  Height="32"  IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtAED_MouseEnter" MouseLeave="txtAED_MouseLeave" ></TextBox>
                            <Button x:Name="addtask" Click="AddTaskData" Margin="0,10,720,0" Content="Add Task" Height="39" />
                            <Button x:Name="upd" Click="UpdateTaskData" Margin="0,10,720,0" Content="Update Task" Height="39" />
                            <Button x:Name="cancel" Click="CancelAction" Margin="0,10,720,0" Content="Cancel" Height="39" />
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="reportTab" Header="Reports">
                <StackPanel >
                    <Label>Select:</Label>
                    <ComboBox x:Name="combo" Height="33" Margin="0,10,720,0" />
                    <Label>Select Start Date:</Label>
                    <TextBox x:Name="txtSD"  Height="32" IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtSD_MouseEnter" MouseLeave="txtSD_MouseLeave" ></TextBox>
                    <Label>Select End Date:</Label>
                    <TextBox x:Name="txtED"  Height="32" IsReadOnly="False" Margin="0,10,720,0" MouseEnter="txtED_MouseEnter" MouseLeave="txtED_MouseLeave" ></TextBox>

                    <Button Content="Generate Report" Height="39" Margin="0,10,720,0" Click="Generate_Report"></Button>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="empTab" Header="Employee Data">
                <StackPanel >
                    <DataGrid x:Name="empGrid" ItemsSource="{Binding}"  AutoGenerateColumns="False" Height="139" Width="300" HorizontalAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="Employee ID" Binding="{Binding EmpId}" ></DataGridTextColumn>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding EmpName}" ></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label>Enter ID</Label>
                    <TextBox x:Name="txtId" Height="35"  IsReadOnly="False" Margin="0,10,720,0"/>
                    <Label>Enter Name</Label>
                    <TextBox x:Name="txtName" Height="34"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                    <Label>Enter UAID</Label>
                    <TextBox x:Name="txtUa" Height="34"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                    <Label>Enter Password</Label>
                    <TextBox x:Name="txtPwd" Height="32"  IsReadOnly="False" Margin="0,10,720,0" ></TextBox>
                    <Button Click="AddEmployee" Margin="0,10,720,0" Content="Add Details" Height="39" />

                </StackPanel>
            </TabItem>



        </TabControl>


    </Grid>

</Window>
